<div class="text-center">
  <div class="container">
      <% @restaurants.each do |restaurant| %>
      <div class="col-xs-12 col-sm-4">
          <div class="card">
          <div class="card-body">
            <h4 class="card-title"><%= restaurant.name %></h4>
            <p class="card-category"><%=restaurant.category%></p>
            <%= link_to 'Show details', restaurant, class: "btn-add" %>
          </div>
        </div>
      </div>
      <% end %>
  </div>
  <%= link_to 'New Restaurant', new_restaurant_path, class: "btn-add-restaurant" %>
</div>


